<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="idealguidefe1.controller.Detail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:wt="idealguidefe1.control"
>
    <Page
        title="{i18n>detailPageTitle}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            intro="Stars: {STARS}"
            title="{NAME}"
        >
            <attributes>
                <ObjectAttribute
                    title="{i18n>phoneNumber}"
                    text="{PHONE}"
                />
                <ObjectAttribute
                    title="{i18n>Address}"
                    text="{ path: 'ADDRESS', formatter: '.formatAddress' }"
                />
            </attributes>
        </ObjectHeader>

        <VBox class="sapUiContentPadding">
            <Button
                text="Show Map"
                press=".onShowMap"
            />
            <core:HTML id="mapContainer"/>
        </VBox>

        <HBox
            alignItems="Center"
            class="sapUiSmallMargin"
        >
            <core:Icon
                src="sap-icon://favorite"
                size="2rem"
                color="gold"
                tooltip="Rating Star"
            />

            <VBox>
                <HBox
                    alignItems="Center"
                    class="sapUiNoMargin"
                >
                    <Text
                        text="{viewModel>/averageRating}"
                        class="sapUiNoMargin sapUiBold"
                    />
                    <Text
                        text="/10"
                        class="sapUiNoMargin"
                    />
                </HBox>

                <Link
                    text="{= ${viewModel>/feedbackNumber} + ' ratings' }"
                    press=".onGoToFeedbacks"
                    class="sapUiTinyMarginTop sapUiSmallMarginEnd"
                />
            </VBox>
        </HBox>

        <Button
            text="Create a reservation"
            press=".onGoToReservation"
        />
        <Carousel
            id="imageCarousel"
            class="sapUiContentPadding"
            loop="true"
        />
    </Page>
</mvc:View>